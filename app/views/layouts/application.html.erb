<!DOCTYPE html>
<html>
<head>
  <title>GroupMeme</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if !session[:user_id].nil? %>
    <%= render partial: 'layouts/user_nav', locals: { group: Group.find_by(group_slug: params[:group_slug]) } %>
  <% else %>
    <%= render partial: 'layouts/public_nav', locals: { group: Group.find_by(group_slug: params[:group_slug]) } %>
  <% end %>
<%= yield %>

</body>
</html>
