<!DOCTYPE html>
<html>
<head>
  <title>GroupSlam</title>
  <!-- Stylesheets from Theme -->
  <%= stylesheet_link_tag 'application', media: 'all'%>
  <!--[if IE 7]>
    <link rel="stylesheet" href="css/font-awesome-ie7.min.css">
  <![endif]-->

  <!-- Scripts from theme placed at bottom of body for faster loading -->
  
  <%= csrf_meta_tags %>

  <!-- Favicon -->
  <link rel="icon" 
      type="image/png" 
      href="https://s3.amazonaws.com/groupmeme/GroupSlam-Favicon-32.ico" />

</head>
<body>
<!-- Navbar -->
<div class="col-md-3 sidebar">
  <%= render 'layouts/shared/basic_nav' %>
</div>

<!-- Flashes -->
<% flash.each do |type, message| %>
    <div class="alert alert-<%= type %>" role="alert"><%= message %></div>
  <% end %>

  <%= yield %>


<!-- Scripts from theme placed at end for faster loading -->
  <%= javascript_include_tag 'http://code.jquery.com/jquery-1.11.3.min.js'%>
  <%= javascript_include_tag 'application'%>
</body>
</html>
