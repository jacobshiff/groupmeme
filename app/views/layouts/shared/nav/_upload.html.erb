<div class="modal fade" id="new-meme-modal" tabindex="-1" role="dialog" aria-labelledby="add-new-meme" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="add-new-meme">Add A New Meme!</h3>
        </div>
        <div class="modal-body">
          <%= form_for(meme, html: { multipart: true, class: "dropzone", id: 'meme-upload', name: 'meme[image]'}) do |f|  %>
            <div class="fallback">
              <%= f.file_field :image %><br>
              <%= f.submit class: "btn btn-primary"%>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-success" data-dismiss="modal" id="add-meme">Add</button>
        </div>
      </div>
    </div>
  </div>
