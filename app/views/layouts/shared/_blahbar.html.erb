<div class="navbar" role="navigation">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#groupslam-navbar-collapse-1" aria-expanded="false">
      <span class="fa fa-bars"></span>
    </button>
    <a class="navbar-brand" href="/"><img style="width:80%" src="https://s3.amazonaws.com/groupmeme/GroupSlam-Logo.png"></a>
    <p class="brand-text"><h4><em><%= current_group.title if current_group %></em></h4></p>
  </div><!-- end navbar-header -->
  <div class="collapse navbar-collapse" id="groupslam-navbar-collapse-1">
    <ul class="nav navbar-nav">
      <% if current_user %>
      <div id="nav-user-block">
        <img src="<%= current_user.avatar %>" class="navbar-avatar"><p id="navbar-username"><%= current_user.username %></p>
      </div>
      <% end %>
      <!-- Conditional links -->
      <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
      <% if current_user %>
        <!-- upload -->
        <li><%= (button_to "Add A New Meme", new_meme_path(current_group.group_slug), method: :get, class: 'btn btn-large btn-primary') if current_group%></li>
        <!--  admin menu-->
        <% if current_group && current_user.type(current_group) == "admin" %>
          <li><%= link_to 'Edit Group', edit_group_path(current_group.group_slug) %></li>
          <li><%= link_to 'Invite New User', invite_new_path(current_group.group_slug) %></li>
          <li><%= link_to 'View and Edit Members', edit_users_path(current_group.group_slug) %></li>
        <% end %>
        <!-- user options -->

        <li><a href="/users/<%= current_user.username %>">Profile</a></li>
        <li><a href="/groups">Your Groups</a></li>
        <li><%= link_to "Sign Out", logout_path, method: :delete %></li>
      <% end %>
      <% if !current_user %>
          <li><%= link_to "Sign In", login_path, class: 'btn btn-primary' %></li>
          <li><%= link_to "Sign Up", registration_new_path, class: 'btn btn-primary' %></li>
      <% end %>
    </ul>
    </ul>
  </div><!-- end navbar-collapse -->
</div><!-- end navbar -->
