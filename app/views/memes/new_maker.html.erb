<div class="col-md-5 content portfolio item">
  <div class="page">
  <article>
  <!-- Image and title -->
  <div class="page-header">
    <div id="portfolio-carousel" class="carousel slide" data-ride="carousel">
    <!-- Main image div -->
    <div class="textpanel">
      <div id="target">
      <img  style="width:100%" src="https://s3.amazonaws.com/groupmeme/paired-programming.gif" class="thumb">
      </div> 
          <textarea class="meme-text" id="top-text" placeholder="ENTER YOUR TOP TEXT" onfocus="this.placeholder = ''" onblur="this.placeholder = 'ENTER YOUR TOP TEXT'"></textarea>
          <textarea class="meme-text" id="bottom-text" placeholder="ENTER YOUR BOTTOM TEXT" onfocus="this.placeholder = ''" onblur="this.placeholder = 'ENTER YOUR BOTTOM TEXT'"></textarea>
    </div>


      <div style="margin-left: 40px">
        <!-- Title placeholder -->
        <h2><input type="text" id="meme-title-text" placeholder="Optional Title" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Optional Title'" style="font-size:18pt;width:300px; margin-bottom:10px;"></input></h2>
      
        <!-- Form -->
        <%= form_for @meme, url: create_meme_path(params[:group_slug]) do |f| %>
          
          <%= f.file_field(:image, accept: 'image/png,image/gif,image/jpeg', id: 'pictureInput', class:'controls') %>
          <div style="margin-top:2px; margin-bottom:2px; font-style: italic;">Select your background image. GIFs, JPGs, PNGs are accepted.</div>
          <%= hidden_field_tag :top_text %>
          <%= hidden_field_tag :bottom_text %>
          <br>
          <%= f.submit "Create", class: 'btn btn-lg btn-default', id:'meme-upload-submit'%>
        <% end %>


      </div>
    </div>
  </div>

    <!-- Progress bar -->
    <div id="progressDiv" class="progress">
    <div class="progress-bar progress-bar-striped active" 
        role="progressbar" 
        aria-valuenow="100" 
        aria-valuemin="0" 
        aria-valuemax="100" 
        style="width: 100%">
    </div>
    </div>
  <!-- <div class="post-content">
    
          
  </div> -->
  <!-- End image and title -->

  <!-- Comments -->

  </article>


  
</div>
</div>







  