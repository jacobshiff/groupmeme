<div class="page">
  <article>
    <div class="page-header">
      <h1><%= @user.username %></h1>
      <p class="lead">Your Profile</p>
    </div>

    <div class="row"
    <div class="col-md-8">

      <%= form_for @user, url: user_path(@user.username), html: {class: "form-horizontal"} do |f| %>
      <div class="form-group" style="margin-left:10px">
        <div id="target">
          <%= image_tag @user.avatar, class: "thumb", style: "width:40%; max-width:300px;border-radius:3%;"%>
        </div>
        <div class="sub-text">
          <%= f.label :image, "Customize your profile photo" %>
          <%= f.file_field(:avatar, accept: 'image/png,image/gif,image/jpeg', id: 'pictureInput', class: 'controls') %>
        </div><br>

        <div class="form-group">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

</article>
</div>
