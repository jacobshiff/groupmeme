<div class="page">
  <article>
  <div class="page-header">
    <h1>Welcome to GroupSlam</h1>
    <p class="lead">The private forum for creating and sharing memes in your organization.</p>
  </div>
  <h3>Please log in</h3>
  
  <%= form_tag(create_login_path(params[:group_slug]), class: "form-horizontal" ) do |f| %>
  <div class="form-group">
    <label for="user[username]" class="control-label">Username</label>
    <div class="row">
      <div class="col-md-6">
        <input type="text" class="form-control" name="user[username]">
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="user[password]" class="control-label">Password</label>
    <div class="row">
      <div class="col-md-6">
        <input type="password" class="form-control" name="user[password]">
      </div>
    </div>
  </div>  

  <span class="help-block">Don't have a GroupSlam account? We're currently in invite-only beta, but sign up here and we'll email you with priority access as we roll out.</span>

    <%= submit_tag("Login", class: 'btn btn-lg btn-default' ) %>
  <% end %>
  </article>
</div>