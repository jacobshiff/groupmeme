<div class="container">
  <h1>Users in <%= current_group.title %></h1>

    <% @users.each do |user| %>
      <div class="card film art">
        <%= link_to user_path(user), class: "thumb" do %>
            <%= image_tag user.avatar %>
        <% end %>
      <div class="card-body">
        <%= link_to user.username, user_path(user) %>
        <% if user != current_user %>
          <%= render partial: 'edit_user_modal', locals: {group: current_group, user: user} %>
          <%= button_to "Remove User From Group", destroy_membership_path(current_group.group_slug, user.username), :method => :delete, data: { confirm: "Really?" }, class: 'btn btn-danger' %>
      </div>
        <% else %>
          <div class="card-footer">
          <p>That's you!</p>
          </div>
        <% end  %>
      </div>
    <% end %>
    <div class="card film art">
      <%= image_tag user. %>
    </div>
</div>
