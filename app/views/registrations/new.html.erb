<!-- This is the new user registration form -->
      <%= form_for @user, url: registration_create_path, html: { multipart: true } do |f| %>
      <!-- Token -->
      <% if @token != nil %>
        <div><%= f.hidden_field :invite_token, value: @token %></div>
      <% end %>
      <div>
        <%= f.label :username %>
        <%= f.text_field :username, value: @user.username %>
      </div>
      <div>
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div>
        <%= f.label "Write a short bio if you'd like!", :biography %>
        <%= f.text_area :biography %>
      </div>
      <div>
        <%= f.submit 'Sign Me Up'%>
      </div>
    <div class="col-md-6">
      <div style="width: 30%">
        <%= image_tag 'https://s3.amazonaws.com/groupmeme/default-avatar.png', class: "registration-default-image img-responsive"%>
      </div>
      <div class="sub-text">
        <%= f.label :avatar, "Customize your avatar" %>
        <%= f.file_field(:avatar, accept: 'image/png,image/gif,image/jpeg') %>
      </div>


    </div>
  <% end %>
